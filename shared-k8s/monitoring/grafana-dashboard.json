# Grafana Dashboard Configuration
# Enterprise-grade visualization and monitoring

{
  "dashboard": {
    "id": null,
    "title": "Enterprise Application Overview",
    "tags": ["kubernetes", "monitoring", "enterprise"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Application Health Status",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=~\"educational-platform-backend|medical-care-backend|weather-app-backend|task-management-backend\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Request Rate (RPS)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{job}} - {{method}} {{status}}"
          }
        ],
        "yAxes": [
          {"label": "Requests/sec", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 3,
        "title": "Response Time (95th Percentile)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{job}} - p95"
          }
        ],
        "yAxes": [
          {"label": "Seconds", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"4..|5..\"}[5m]) / rate(http_requests_total[5m])",
            "legendFormat": "{{job}} - Error Rate"
          }
        ],
        "yAxes": [
          {"label": "Error Rate", "min": 0, "max": 1},
          {"show": false}
        ]
      },
      {
        "id": 5,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{container!=\"POD\",container!=\"\"}[5m])",
            "legendFormat": "{{pod}} - {{container}}"
          }
        ],
        "yAxes": [
          {"label": "CPU Cores", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "container_memory_usage_bytes{container!=\"POD\",container!=\"\"} / 1024 / 1024",
            "legendFormat": "{{pod}} - {{container}}"
          }
        ],
        "yAxes": [
          {"label": "Memory (MB)", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 7,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "postgresql_connections_active",
            "legendFormat": "PostgreSQL - {{instance}}"
          },
          {
            "expr": "sqlserver_connections",
            "legendFormat": "SQL Server - {{instance}}"
          },
          {
            "expr": "redis_connected_clients",
            "legendFormat": "Redis - {{instance}}"
          }
        ],
        "yAxes": [
          {"label": "Connections", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 8,
        "title": "Pod Status Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "count by (phase) (kube_pod_status_phase)",
            "legendFormat": "{{phase}}"
          }
        ]
      },
      {
        "id": 9,
        "title": "Network I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 16, "x": 8, "y": 24},
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total[5m]) / 1024 / 1024",
            "legendFormat": "{{pod}} - RX (MB/s)"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total[5m]) / 1024 / 1024",
            "legendFormat": "{{pod}} - TX (MB/s)"
          }
        ],
        "yAxes": [
          {"label": "MB/s", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 10,
        "title": "Disk I/O",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "rate(container_fs_reads_bytes_total[5m]) / 1024 / 1024",
            "legendFormat": "{{pod}} - Read (MB/s)"
          },
          {
            "expr": "rate(container_fs_writes_bytes_total[5m]) / 1024 / 1024",
            "legendFormat": "{{pod}} - Write (MB/s)"
          }
        ],
        "yAxes": [
          {"label": "MB/s", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 11,
        "title": "Active Alerts",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "Value": true},
              "indexByName": {},
              "renameByName": {
                "alertname": "Alert",
                "severity": "Severity",
                "summary": "Summary"
              }
            }
          }
        ]
      }
    ]
  }
}