# E-commerce Application - Staging Environment Variables
# Used for staging/testing environment

# Application Configuration
NODE_ENV=staging
PORT=3000
FRONTEND_URL=https://staging.yourdomain.com

# Database Configuration
MONGODB_URI=mongodb://staging-db-host:27017/ecommerce_staging
MONGODB_TEST_URI=mongodb://staging-db-host:27017/ecommerce_test

# Redis Configuration
REDIS_URL=redis://staging-redis-host:6379
REDIS_PASSWORD=your-staging-redis-password

# JWT Configuration
JWT_SECRET=your-staging-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=staging@yourdomain.com
EMAIL_PASS=your-staging-email-password
EMAIL_FROM=noreply@yourdomain.com

# Payment Configuration (Stripe Test Keys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-staging-aws-access-key
AWS_SECRET_ACCESS_KEY=your-staging-aws-secret-key
S3_BUCKET_NAME=ecommerce-staging-assets

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=https://staging.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
