# Weather Application - Development Environment Variables
# Copy this file to .env for local development

# Application Configuration
FLASK_ENV=development
FLASK_APP=app.py
PORT=5000
DEBUG=True

# Weather API Configuration
OPENWEATHER_API_KEY=your_openweather_api_key_here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# Database Configuration
DATABASE_URL=sqlite:///weather_dev.db
SQLALCHEMY_DATABASE_URI=sqlite:///weather_dev.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
CACHE_TYPE=redis

# JWT Configuration
JWT_SECRET_KEY=your-development-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/weather_app.log

# External APIs
GEOCODING_API_URL=https://api.openweathermap.org/geo/1.0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload (for weather icons)
UPLOAD_FOLDER=uploads/
MAX_CONTENT_LENGTH=16777216
