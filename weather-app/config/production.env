# Weather Application - Production Environment Variables
# CRITICAL: Never commit actual secrets to version control

# Application Configuration
FLASK_ENV=production
FLASK_APP=app.py
PORT=5000
DEBUG=False

# Weather API Configuration
OPENWEATHER_API_KEY=your_production_openweather_api_key
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# Database Configuration
DATABASE_URL=postgresql://weather_user:your_production_db_password@prod-db-host:5432/weather_prod
SQLALCHEMY_DATABASE_URI=postgresql://weather_user:your_production_db_password@prod-db-host:5432/weather_prod
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Redis Configuration
REDIS_URL=redis://prod-redis-host:6379
CACHE_TYPE=redis

# JWT Configuration
JWT_SECRET_KEY=your-production-jwt-secret-key-must-be-very-secure
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=120

# CORS Configuration
CORS_ORIGINS=https://weather-app.com,https://www.weather-app.com

# Logging
LOG_LEVEL=WARNING
LOG_FILE=logs/weather_app.log

# External APIs
GEOCODING_API_URL=https://api.openweathermap.org/geo/1.0

# Rate Limiting
RATE_LIMIT_REQUESTS=5000
RATE_LIMIT_WINDOW=60

# File Upload
UPLOAD_FOLDER=uploads/
MAX_CONTENT_LENGTH=16777216

# Security
SECRET_KEY=your-production-secret-key
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
