# Weather Application - Staging Environment Variables

# Application Configuration
FLASK_ENV=staging
FLASK_APP=app.py
PORT=5000
DEBUG=False

# Weather API Configuration
OPENWEATHER_API_KEY=your_staging_openweather_api_key
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# Database Configuration
DATABASE_URL=postgresql://weather_user:your_staging_db_password@staging-db-host:5432/weather_staging
SQLALCHEMY_DATABASE_URI=postgresql://weather_user:your_staging_db_password@staging-db-host:5432/weather_staging
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Redis Configuration
REDIS_URL=redis://staging-redis-host:6379
CACHE_TYPE=redis

# JWT Configuration
JWT_SECRET_KEY=your-staging-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS Configuration
CORS_ORIGINS=https://staging-weather-app.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/weather_app.log

# External APIs
GEOCODING_API_URL=https://api.openweathermap.org/geo/1.0

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# File Upload
UPLOAD_FOLDER=uploads/
MAX_CONTENT_LENGTH=16777216
