# Educational Platform - Development Environment
# Application Settings
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=True
LOG_LEVEL=DEBUG

# Database Configuration
DATABASE_URL=postgresql://edu_user:edu_password@localhost:5432/educational_platform_dev
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# JWT Configuration
JWT_SECRET_KEY=dev-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=dev@educational-platform.com
SMTP_PASSWORD=dev-password
EMAIL_FROM=dev@educational-platform.com

# File Upload Configuration
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,jpg,jpeg,png,gif,mp4,avi,mov

# External API Keys
OPENAI_API_KEY=dev-openai-key
STRIPE_PUBLIC_KEY=pk_test_dev_stripe_key
STRIPE_SECRET_KEY=sk_test_dev_stripe_key
ZOOM_CLIENT_ID=dev-zoom-client-id
ZOOM_CLIENT_SECRET=dev-zoom-client-secret

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=dev-aws-access-key
AWS_SECRET_ACCESS_KEY=dev-aws-secret-key
S3_BUCKET_NAME=educational-platform-dev-bucket

# Monitoring
SENTRY_DSN=https://dev-sentry-dsn@sentry.io/project-id
PROMETHEUS_METRICS_ENABLED=True

# Feature Flags
ENABLE_VIDEO_CONFERENCING=True
ENABLE_AI_TUTORING=True
ENABLE_PAYMENT_SYSTEM=True
ENABLE_ANALYTICS=True
