# Educational Platform - Production Environment
# Application Settings
FLASK_ENV=production
SECRET_KEY=prod-secret-key-change-this-value
DEBUG=False
LOG_LEVEL=WARNING

# Database Configuration
DATABASE_URL=postgresql://edu_user:edu_password@prod-db-host:5432/educational_platform_prod
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=100

# Redis Configuration
REDIS_URL=redis://prod-redis:6379/0
REDIS_CACHE_TTL=86400

# JWT Configuration
JWT_SECRET_KEY=prod-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Email Configuration
SMTP_SERVER=smtp.sendgrid.com
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=prod-sendgrid-api-key
EMAIL_FROM=noreply@educational-platform.com

# File Upload Configuration
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=104857600
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,jpg,jpeg,png,gif,mp4,avi,mov,zip,rar

# External API Keys
OPENAI_API_KEY=prod-openai-key
STRIPE_PUBLIC_KEY=pk_live_prod_stripe_key
STRIPE_SECRET_KEY=sk_live_prod_stripe_key
ZOOM_CLIENT_ID=prod-zoom-client-id
ZOOM_CLIENT_SECRET=prod-zoom-client-secret

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=prod-aws-access-key
AWS_SECRET_ACCESS_KEY=prod-aws-secret-key
S3_BUCKET_NAME=educational-platform-prod-bucket

# Monitoring
SENTRY_DSN=https://prod-sentry-dsn@sentry.io/project-id
PROMETHEUS_METRICS_ENABLED=True

# Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Feature Flags
ENABLE_VIDEO_CONFERENCING=True
ENABLE_AI_TUTORING=True
ENABLE_PAYMENT_SYSTEM=True
ENABLE_ANALYTICS=True
