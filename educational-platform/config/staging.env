# Educational Platform - Staging Environment
# Application Settings
FLASK_ENV=staging
SECRET_KEY=staging-secret-key-change-in-production
DEBUG=False
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://edu_user:edu_password@staging-db-host:5432/educational_platform_staging
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://staging-redis:6379/0
REDIS_CACHE_TTL=7200

# JWT Configuration
JWT_SECRET_KEY=staging-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=noreply@educational-platform.com
SMTP_PASSWORD=staging-email-password
EMAIL_FROM=noreply@educational-platform.com

# File Upload Configuration
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=33554432
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,jpg,jpeg,png,gif,mp4,avi,mov

# External API Keys
OPENAI_API_KEY=staging-openai-key
STRIPE_PUBLIC_KEY=pk_test_staging_stripe_key
STRIPE_SECRET_KEY=sk_test_staging_stripe_key
ZOOM_CLIENT_ID=staging-zoom-client-id
ZOOM_CLIENT_SECRET=staging-zoom-client-secret

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=staging-aws-access-key
AWS_SECRET_ACCESS_KEY=staging-aws-secret-key
S3_BUCKET_NAME=educational-platform-staging-bucket

# Monitoring
SENTRY_DSN=https://staging-sentry-dsn@sentry.io/project-id
PROMETHEUS_METRICS_ENABLED=True

# Feature Flags
ENABLE_VIDEO_CONFERENCING=True
ENABLE_AI_TUTORING=True
ENABLE_PAYMENT_SYSTEM=True
ENABLE_ANALYTICS=True
