@page "/"
@inject ApiService ApiService
@using MedicalCareSystem.Frontend.Services

<PageTitle>Dashboard - Medical Care System</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        Medical Care System Dashboard
                    </h3>
                </div>
                <div class="card-body">
                    <p class="lead">Welcome to the Medical Care System. Manage patients, appointments, doctors, and medical records efficiently.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Quick Stats Cards -->
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h4 class="card-title">Patients</h4>
                    <p class="card-text">Manage patient information and records</p>
                    <a href="/patients" class="btn btn-primary">
                        <i class="fas fa-arrow-right me-2"></i>
                        View Patients
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-check fa-3x text-success mb-3"></i>
                    <h4 class="card-title">Appointments</h4>
                    <p class="card-text">Schedule and manage appointments</p>
                    <a href="/appointments" class="btn btn-success">
                        <i class="fas fa-arrow-right me-2"></i>
                        View Appointments
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-user-md fa-3x text-info mb-3"></i>
                    <h4 class="card-title">Doctors</h4>
                    <p class="card-text">Doctor profiles and availability</p>
                    <a href="/doctors" class="btn btn-info">
                        <i class="fas fa-arrow-right me-2"></i>
                        View Doctors
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-file-medical fa-3x text-warning mb-3"></i>
                    <h4 class="card-title">Medical Records</h4>
                    <p class="card-text">Patient medical history and records</p>
                    <a href="/records" class="btn btn-warning">
                        <i class="fas fa-arrow-right me-2"></i>
                        View Records
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Activity -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Recent Activity
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">New patient registered</h6>
                                <small class="text-muted">2 hours ago</small>
                            </div>
                            <p class="mb-1">John Doe completed registration</p>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Appointment scheduled</h6>
                                <small class="text-muted">4 hours ago</small>
                            </div>
                            <p class="mb-1">Dr. Smith - Cardiology consultation</p>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Medical record updated</h6>
                                <small class="text-muted">1 day ago</small>
                            </div>
                            <p class="mb-1">Patient treatment notes added</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- System Status -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-server me-2"></i>
                        System Status
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="p-3">
                                <i class="fas fa-database fa-2x text-success mb-2"></i>
                                <h6>Database</h6>
                                <span class="badge bg-success">Online</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3">
                                <i class="fas fa-server fa-2x text-success mb-2"></i>
                                <h6>API Server</h6>
                                <span class="badge bg-success">Running</span>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>System Health:</strong> All services are running normally.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        // Initialize dashboard data if needed
        // For now, this is a static dashboard
    }
}
